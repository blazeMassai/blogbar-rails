
<% provide(:title, "Users") %>

<div class="container-fluid mt-4">

  <div class="container">
    <a href="/users/new" class="float">
      <i class="fa fa-plus my-float "></i>
    </a>
  </div>


  </div>

  <div class=container">


    <% count = 1 %>
    <table class="table table-hover table-bordered table-sm  mt-2"  id= "all">
      <thead>
      <tr class="table-primary">
        <th>S/N</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>

      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= count %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>

          <td class="text-center">
            <span class="badge rounded-pill bg-success" title="View User">
                    <%= link_to 'Show', user_path(user) %>
            </span>

            <span class="badge rounded-pill bg-danger" title="Delete User">
                    <%= link_to 'Delete', user_path(user), method: :delete,
                        data: { confirm: 'Are you sure you want to delete This User?' }
                    %>
            </span>

          </td>


        </tr>
        <% count += 1 %>
      <% end %>
      </tbody>
    </table>





</div>

