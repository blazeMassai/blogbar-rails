<div class="container-fluid mt-4">

  <div class="container">
    <a href="/users/new" class="float">
      <i class="fa fa-plus my-float "></i>
    </a>
  </div>


  </div>

  <div class=container">


    <% count = 1 %>
    <table class="table table-hover table-bordered table-sm  mt-2"  id= "all">
      <thead>
      <tr class="table-primary">
        <th>S/N</th>
        <th>Name</th>
        <th>Email</th>

      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= count %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>

          </td>
        </tr>
        <% count += 1 %>
      <% end %>
      </tbody>
    </table>





</div>