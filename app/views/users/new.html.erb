<div class="container align-center pt-4">

  <div class="row">
    <div class="col-12">
      <h1 class="fs-1 mb-3 text-left">SignUp</h1>
    </div>
  </div>


  <% if @user.errors.any? %>
    <div class="col-12 col-md-6">

      <% @user.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger alert-dismissible mb-3 mt-3 fade-show">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
          </button>
          <strong> <%= msg %> </strong>
        </div>
      <% end %>

    </div>
  <% end %>


    <%= form_with(model: @user, local: true) do |f| %>

    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.text_field :name ,class:"form-control", id:"name",  help: "Enter your full name"  %>
        <label for="name">First and Last Name</label>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.email_field :email ,class:"form-control", id:"email", help: "Enter your email"  %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.password_field :password ,class:"form-control", id:"password"  %>
        <%=f.label :password %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.password_field :password_confirmation ,class:"form-control", id:"password_confirmation"  %>
        <%=f.label :password_confirmation %>
      </div>
    </div>


      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>


</div>