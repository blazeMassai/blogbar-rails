<% provide(:title, "Log in") %>

<div class="container align-center pt-4">

  <div class="row">
    <div class="col-12">
      <h1 class="fs-1 mb-3 text-left">Log in</h1>
    </div>
  </div>





  <%= form_with(url: login_path, scope: :session ,local: true) do |f| %>


    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.email_field :email ,class:"form-control", id:"email", help: "Enter your email"  %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="floating-form mb-3">
        <%= f.password_field :password ,class:"form-control", id:"password"  %>
        <%=f.label :password %>
      </div>
    </div>



    <%= f.submit "Log In", class: "btn btn-primary" %>
  <% end %>


</div>